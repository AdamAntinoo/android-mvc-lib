<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uipanelborderwhite">

    <org.dimensinfin.android.mvc.fonts.ElementalEndTextView
        android:id="@+id/applicationName"
        style="@style/AppTheme.TextView.Glow.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/appname"
        android:textSize="30sp" />

    <org.dimensinfin.android.mvc.fonts.ElementalEndTextView
        android:id="@+id/applicationVersion"
        style="@style/AppTheme.TextView.Glow.Orange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/applicationName"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/applicationName"
        android:text="@string/appversion"
        android:textSize="20sp"
        android:textStyle="bold" />

    <org.dimensinfin.android.mvc.fonts.ElementalEndTextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:gravity="right"
        android:text="(c) Dimensinfin Industries 2020"
        android:textColor="@color/appwhite"
        android:textSize="8sp"
        android:textStyle="bold" />
</RelativeLayout>
