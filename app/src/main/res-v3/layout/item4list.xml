<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uipanelbordergreen">

    <ImageView
        android:id="@+id/nodeIcon"
        style="@style/AppTheme.NodeIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:src="@drawable/defaulticonplaceholder" />

    <org.dimensinfin.android.mvc.fonts.ProximaNovaBoldTextView
        android:id="@+id/nodeName"
        style="@style/AppTheme.TextView.Glow.White"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/nodeIcon"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:text="@string/defaultlabelname"
        android:textSize="16sp" />
</RelativeLayout>
