<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uipanelborderwhite">

    <include layout="@layout/nodebase4expand" />

    <RelativeLayout
        android:id="@+id/nodeInformationBlock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/separator"
        android:layout_toRightOf="@+id/nodeIcon">

        <TextView
            android:id="@+id/name"
            style="@style/AppTheme.TextView"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:text="@string/default_shortname"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/classLabel"
            style="@style/AppTheme.NodeClass"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:singleLine="true"
            android:text="-CLASS-" />

        <TextView
            android:id="@+id/childCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/classLabel"
            android:gravity="right"
            android:text="320"
            android:textColor="@color/appwhite"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/categoryLabel"
            style="@style/AppTheme.Label"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/childCount"
            android:gravity="right"
            android:text="-CATEGORY-" />

    </RelativeLayout>
</RelativeLayout>
