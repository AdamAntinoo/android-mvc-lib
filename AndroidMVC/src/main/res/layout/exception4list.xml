<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/separatorborderorange">

	<TextView
			android:id="@+id/exceptionCode"
			style="@style/AppTheme.TextView"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="2dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_marginTop="2dp"
		android:textStyle="bold"
			android:singleLine="true"
			android:text="@string/default_exceptionMessage"
			android:textColor="@color/apporangebrilliant"
			android:textSize="14sp"/>

	<TextView
			android:id="@+id/exceptionType"
			style="@style/AppTheme.TextView"
			android:layout_width="wrap_content"
		android:textStyle="bold"
			android:layout_height="wrap_content"
			android:layout_alignParentRight="true"
			android:layout_alignParentTop="true"
			android:layout_marginBottom="2dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_marginTop="2dp"
			android:gravity="right"
			android:singleLine="true"
			android:text="@string/default_exceptiontype"
			android:textColor="@color/appbluepurple"
			android:textSize="12sp"/>

	<TextView
			android:id="@+id/exceptionMessage"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="false"
			android:layout_below="@+id/exceptionType"
			android:layout_marginBottom="2dp"
			android:layout_marginLeft="2dp"
			android:layout_marginRight="2dp"
			android:layout_marginTop="2dp"
			android:singleLine="false"
			android:text="@string/default_exceptionMessage"
			android:textColor="@android:color/white"
			android:textSize="11sp"/>

	<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:layout_alignParentRight="true"
			android:layout_below="@+id/exceptionMessage"
			android:gravity="right">

		<TextView
				android:id="@+id/exceptionClassName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="false"
				android:layout_below="@+id/exceptionType"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:layout_marginTop="2dp"
				android:singleLine="false"
				android:text="Class"
			android:visibility="gone"
				android:textColor="@android:color/white"
				android:textSize="11sp"/>

		<TextView
				android:id="@+id/exceptionMethodName"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentLeft="true"
				android:layout_alignParentTop="false"
				android:layout_below="@+id/exceptionType"
				android:layout_marginBottom="2dp"
				android:layout_marginLeft="2dp"
				android:layout_marginRight="2dp"
				android:layout_marginTop="2dp"
				android:singleLine="false"
				android:text="MethodName"
				android:textColor="@android:color/white"
				android:textSize="11sp"/>
	</LinearLayout>
</RelativeLayout>
