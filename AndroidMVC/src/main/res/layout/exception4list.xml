<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:background="@drawable/separatorborderorange">

	<TextView
		android:id="@+id/exceptionCode"
		style="@style/AppTheme.TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="true"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="2dp"
		android:singleLine="true"
		android:text="@string/default_exceptionMessage"
		android:textColor="@color/apporangebrilliant"
		android:textSize="14sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/exceptionType"
		style="@style/AppTheme.TextView"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:layout_alignParentRight="true"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="2dp"
		android:gravity="right"
		android:singleLine="true"
		android:text="@string/default_exceptiontype"
		android:textColor="@color/appbluepurple"
		android:textSize="12sp"
		android:textStyle="bold" />

	<TextView
		android:id="@+id/exceptionMessage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/exceptionType"
		android:layout_alignParentLeft="true"
		android:layout_alignParentTop="false"
		android:layout_marginLeft="2dp"
		android:layout_marginTop="2dp"
		android:layout_marginRight="2dp"
		android:layout_marginBottom="2dp"
		android:singleLine="false"
		android:text="@string/default_exceptionMessage"
		android:textColor="@android:color/white"
		android:textSize="11sp" />

	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_below="@+id/exceptionMessage"
		android:layout_alignParentRight="true"
		android:gravity="right"
		android:orientation="horizontal">

		<TextView
			android:id="@+id/exceptionClassName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/exceptionType"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="false"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="2dp"
			android:layout_marginRight="2dp"
			android:layout_marginBottom="2dp"
			android:singleLine="false"
			android:text="Class"
			android:textColor="@android:color/white"
			android:textSize="11sp"
			android:visibility="gone" />

		<TextView
			android:id="@+id/exceptionMethodName"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/exceptionType"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="false"
			android:layout_marginLeft="2dp"
			android:layout_marginTop="2dp"
			android:layout_marginRight="2dp"
			android:layout_marginBottom="2dp"
			android:singleLine="false"
			android:text="MethodName"
			android:textColor="@android:color/white"
			android:textSize="11sp" />
	</LinearLayout>
</RelativeLayout>
