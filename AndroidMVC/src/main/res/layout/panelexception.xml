<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/uipanelborderred">

    <ImageView
        android:id="@+id/icon"
        style="@style/AppTheme.NodeIcon"
        android:layout_width="@dimen/nodeiconsize"
        android:layout_height="@dimen/nodeiconsize"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/outline_warning_black_18dp"
        android:tint="@color/appred"
        android:visibility="visible" />
    <org.dimensinfin.android.mvc.fonts.ProximaNovaThinTextView
        android:id="@+id/exceptionMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@+id/icon"
        android:singleLine="false"
        android:text="@string/default_exceptionMessage"
        android:textColor="@android:color/white"
        android:textSize="12sp" />
</RelativeLayout>
