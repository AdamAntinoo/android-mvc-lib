<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Definition of the Application Theme Icons -->
    <style name="AppTheme.ActivityBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:background">@android:color/black</item>
        <item name="android:contentDescription">@string/default_content_description</item>
        <item name="android:src">@drawable/blacktraslucent80</item>
    </style>

    <style name="AppTheme.NodeIcon">
        <item name="android:layout_width">@dimen/nodeiconsize</item>
        <item name="android:layout_height">@dimen/nodeiconsize</item>
        <item name="android:contentDescription">@string/default_content_description</item>
        <item name="android:src">@drawable/defaulticonplaceholder</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">@drawable/whiteborderbox</item>
    </style>

    <style name="AppTheme.NodeIcon.NoBorder">
        <item name="android:layout_width">@dimen/nodeiconsize</item>
        <item name="android:layout_height">@dimen/nodeiconsize</item>
        <item name="android:contentDescription">@string/default_content_description</item>
        <item name="android:src">@drawable/defaulticonplaceholder</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:background">#00000000</item>
    </style>

    <style name="AppTheme.Arrow">
        <item name="android:layout_width">@dimen/arrowsize</item>
        <item name="android:layout_height">@dimen/arrowsize</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">right</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:visibility">visible</item>
        <item name="android:src">@drawable/arrowleft</item>
    </style>

    <style name="AppTheme.Label">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">7sp</item>
    </style>

    <style name="AppTheme.Label.Big">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="AppTheme.Label.BottomLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/bottomwhiteline</item>
    </style>

    <style name="AppTheme.Label.TopLine">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/topwhiteline</item>
    </style>

    <style name="AppTheme.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.TextView.Glow">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/white</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">10</item>
    </style>

    <style name="AppTheme.TextView.Glow.White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:shadowColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextView.Glow.Orange">
        <item name="android:textColor">@color/apporange</item>
        <item name="android:shadowColor">@color/apporange</item>
    </style>

    <style name="AppTheme.TextView.Glow.Green">
        <item name="android:textColor">@color/appgreen</item>
        <item name="android:shadowColor">@color/appgreen</item>
    </style>

    <style name="AppTheme.NodeClass">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appwhite</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- Definition of the Progress indicator -->
    <style name="AppTheme.Progress">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/appwhite</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Widget"></style>

    <style name="Widget.ProgressBar">
        <item name="android:indeterminateOnly">true</item>
        <item name="android:indeterminateBehavior">repeat</item>
        <item name="android:indeterminateDuration">3500</item>
        <item name="android:minWidth">@dimen/progressbarsize</item>
        <item name="android:maxWidth">@dimen/progressbarsize</item>
        <item name="android:minHeight">@dimen/progressbarsize</item>
        <item name="android:maxHeight">@dimen/progressbarsize</item>
    </style>

    <style name="Widget.CirclePageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">@dimen/circlemargin</item>
        <item name="android:layout_marginRight">@dimen/circlemargin</item>
        <item name="android:radius">@dimen/circleradius</item>
    </style>

</resources>
